{
  "name": "@colibri-hq/colibri",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "description": "The Colibri server",
  "keywords": [
    "colibri",
    "server",
    "ebooks",
    "ebook-management",
    "epub",
    "opds"
  ],
  "homepage": "https://colibri-hq.org/",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "url": "git+https://github.com/colibri-hq/colibri.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "lefthook install",
    "fmt": "turbo fmt",
    "lint": "turbo lint",
    "check": "turbo check",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@colibri-hq/app...",
    "dev:docs": "turbo dev --filter=@colibri-hq/docs...",
    "dev:cli": "turbo dev --filter=@colibri-hq/cli...",
    "build": "turbo build",
    "build:app": "turbo build --filter=@colibri-hq/app...",
    "build:docs": "turbo build --filter=@colibri-hq/docs...",
    "build:docs:ci": "turbo build:ci --filter=@colibri-hq/docs...",
    "build:cli": "turbo build --filter=@colibri-hq/cli...",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "pnpm --filter=@colibri-hq/app run test",
    "storybook": "pnpm --filter=@colibri-hq/ui run storybook"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook",
      "msw"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver",
      "yarn"
    ]
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "lefthook": "^2.0.13",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.3"
  },
  "dependencies": {
    "glob": "^13.0.0"
  }
}
