{
  "name": "@colibri-hq/colibri",
  "version": "0.0.1",
  "private": true,
  "description": "The Colibri server",
  "keywords": [
    "colibri",
    "ebook-management",
    "ebooks",
    "epub",
    "opds",
    "server"
  ],
  "homepage": "https://colibri-hq.org/",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "lefthook install",
    "fmt": "turbo fmt",
    "lint": "turbo lint",
    "check": "turbo check",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@colibri-hq/app...",
    "dev:docs": "turbo dev --filter=@colibri-hq/docs...",
    "dev:cli": "turbo dev --filter=@colibri-hq/cli...",
    "build": "turbo build",
    "build:app": "turbo build --filter=@colibri-hq/app...",
    "build:docs": "turbo build --filter=@colibri-hq/docs...",
    "build:docs:ci": "turbo build:ci --filter=@colibri-hq/docs...",
    "build:cli": "turbo build --filter=@colibri-hq/cli...",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "pnpm --filter=@colibri-hq/app run test",
    "storybook": "pnpm --filter=@colibri-hq/ui run storybook"
  },
  "dependencies": {
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@colibri-hq/shared": "workspace:*",
    "lefthook": "^2.0.15",
    "oxfmt": "catalog:",
    "turbo": "^2.7.5"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "canvas",
      "esbuild",
      "sharp",
      "workerd"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver",
      "yarn"
    ]
  }
}
