{
  "name": "@colibri-hq/sdk",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "The Colibri SDK",
  "keywords": [
    "colibri",
    "server",
    "ebooks",
    "ebook-management",
    "epub",
    "opds"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "url": "git+https://github.com/colibri-hq/colibri.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --config ./tsconfig.test.json --coverage",
    "test:ui": "vitest --config ./tsconfig.test.json --ui",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "lint": "eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "prettier --write --cache --cache-location=./.cache/prettier.json --cache-strategy metadata .",
    "fmt:ci": "prettier --check --cache --cache-location=./.cache/prettier.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run test && pnpm run build",
    "types": "kysely-codegen --dialect postgres --env-file ../../.env --url 'env(DB_URL)' --out-file ./src/schema.d.ts --type-only-imports --default-schema public --exclude-pattern \"auth.*\" --include-pattern \"(public|authentication|vault).*\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/lib-storage": "^3.842.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@colibri-hq/mobi": "workspace:*",
    "@colibri-hq/oauth": "workspace:*",
    "@colibri-hq/pdf": "workspace:*",
    "@colibri-hq/shared": "workspace:*",
    "@simplewebauthn/server": "^13.1.2",
    "@zip.js/zip.js": "^2.7.63",
    "esm-env": "catalog:",
    "fast-xml-parser": "^5.2.5",
    "file-type": "^21.0.0",
    "he": "^1.2.0",
    "jsonwebtoken": "catalog:",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "turndown": "catalog:",
    "typescript": "catalog:",
    "xmldom": "^0.6.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/he": "^1.2.3",
    "@types/jsonwebtoken": "catalog:",
    "@types/node": "catalog:",
    "@types/pg": "^8.15.4",
    "@types/turndown": "catalog:",
    "@types/xmldom": "^0.1.34",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "kanel": "^3.14.1",
    "kanel-kysely": "^0.7.1",
    "kysely-codegen": "^0.18.5",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "vitest": "catalog:"
  },
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./src/schema.d.ts",
      "types": "./src/schema.d.ts"
    },
    "./oauth": {
      "import": "./dist/oauth/index.js",
      "types": "./dist/oauth/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    },
    "./ebooks": {
      "import": "./dist/ebooks/index.js",
      "browser": "./dist/ebooks/index.js",
      "types": "./dist/ebooks/index.d.ts"
    }
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
