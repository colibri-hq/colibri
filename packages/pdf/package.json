{
  "name": "@colibri-hq/pdf",
  "version": "0.0.1",
  "description": "A wrapper for the pdf.js library that re-exports the API with conditional module exports.",
  "keywords": [
    "colibri",
    "ebook-management",
    "ebooks",
    "epub",
    "opds",
    "server"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "esnext": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/node.js",
      "worker": "./dist/worker.js",
      "default": "./dist/index.js"
    },
    "./viewer": {
      "types": "./dist/viewer/index.d.ts",
      "node": "./dist/viewer/node.js",
      "default": "./dist/viewer/index.js"
    },
    "./sandbox": {
      "types": "./dist/index.d.ts",
      "node": "./dist/sandbox/node.js",
      "default": "./dist/sandbox/index.js"
    },
    "./worker": {
      "types": "./dist/index.d.ts",
      "default": "./dist/worker.js"
    }
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "build:ci": "pnpm run build",
    "check": "tsc --noEmit",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "dev": "tsc --watch",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build"
  },
  "dependencies": {
    "@colibri-hq/shared": "workspace:*",
    "esm-env": "catalog:",
    "pdfjs-dist": "^5.4.530"
  },
  "devDependencies": {
    "eslint": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  }
}
