{
  "name": "@colibri-hq/setup",
  "version": "0.0.1",
  "description": "Setup wizard for new Colibri ebook library instances",
  "keywords": [
    "colibri",
    "installer",
    "oclif",
    "setup",
    "wizard"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "bin": {
    "colibri-setup": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc && oclif manifest",
    "build:ci": "pnpm run build",
    "check": "tsc --noEmit",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "dev": "tsc --watch",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --cache --cache-location=./.cache/eslint.json .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "prepack": "pnpm run build",
    "test": "vitest run --coverage --cache",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@colibri-hq/sdk": "workspace:*",
    "@colibri-hq/ui": "workspace:*",
    "@oclif/core": "^4.8.0",
    "@sveltejs/kit": "catalog:",
    "open": "^11.0.0",
    "svelte": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@colibri-hq/shared": "workspace:*",
    "@eslint/js": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/node": "catalog:",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "catalog:",
    "oclif": "^4.22.67",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "pg": "^8.17.1",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "testcontainers": "^11.11.0",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "oclif": {
    "bin": "colibri-setup",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/index.js"
    },
    "dirname": "colibri-setup"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
