{
  "name": "@colibri-hq/languages",
  "version": "0.0.1",
  "description": "ISO 639-3 language code resolution for Colibri",
  "keywords": [
    "colibri",
    "i18n",
    "iso-639",
    "languages"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "esnext": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "build:ci": "pnpm run build",
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "download": "tsx scripts/download.ts",
    "generate": "tsx scripts/generate.ts",
    "update": "pnpm download && pnpm generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build"
  },
  "devDependencies": {
    "@colibri-hq/shared": "workspace:*",
    "eslint": "catalog:",
    "oxfmt": "catalog:",
    "rimraf": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
