{
  "name": "@colibri-hq/languages",
  "version": "0.0.1",
  "description": "ISO 639-3 language code resolution for Colibri",
  "keywords": [
    "colibri",
    "i18n",
    "iso-639",
    "languages"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "esnext": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "build:ci": "pnpm run build",
    "check": "tsc --noEmit",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "dev": "tsc --watch",
    "download": "tsx scripts/download.ts",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "generate": "tsx scripts/generate.ts",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build",
    "test": "vitest run --coverage --cache",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "update": "pnpm download && pnpm generate"
  },
  "devDependencies": {
    "@colibri-hq/shared": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
