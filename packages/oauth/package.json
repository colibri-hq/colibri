{
  "name": "@colibri-hq/oauth",
  "version": "0.1.0",
  "description": "OAuth 2.0/2.1 authorization server and client implementation",
  "keywords": [
    "authorization-server",
    "colibri",
    "device-flow",
    "oauth",
    "oauth-2.1",
    "oauth-authorization-server",
    "oauth-client",
    "oauth2",
    "pkce"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./client/authorization-code": {
      "types": "./dist/client/authorization-code.d.ts",
      "import": "./dist/client/authorization-code.js"
    },
    "./client/client-credentials": {
      "types": "./dist/client/client-credentials.d.ts",
      "import": "./dist/client/client-credentials.js"
    },
    "./client/device-authorization": {
      "types": "./dist/client/device-authorization.d.ts",
      "import": "./dist/client/device-authorization.js"
    },
    "./client/storage": {
      "types": "./dist/client/storage/index.d.ts",
      "import": "./dist/client/storage/index.js"
    },
    "./client/fetch": {
      "types": "./dist/client/fetch/index.d.ts",
      "import": "./dist/client/fetch/index.js"
    },
    "./grantType": {
      "types": "./dist/grantTypes/grantType.d.ts",
      "import": "./dist/grantTypes/grantType.js"
    }
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "build:ci": "pnpm run build",
    "check": "tsc --noEmit",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "dev": "tsc --watch",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run test && pnpm run build",
    "test": "vitest run --coverage --cache",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@colibri-hq/shared": "workspace:*",
    "jsonwebtoken": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@types/jsonwebtoken": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "fastify": "^5.7.1",
    "msw": "^2.12.7",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "supertest": "^7.2.2",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
