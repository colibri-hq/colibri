{
  "name": "@colibri-hq/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "The Colibri SDK",
  "keywords": [
    "colibri",
    "server",
    "ebooks",
    "ebook-management",
    "epub",
    "opds"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "url": "git+https://github.com/colibri-hq/colibri.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "test": "vitest --config ./tsconfig.test.json",
    "test:coverage": "vitest run --config ./tsconfig.test.json --coverage",
    "test:ui": "vitest --config ./tsconfig.test.json --ui",
    "lint": "eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "prettier --write --cache --cache-location=./.cache/prettier.json --cache-strategy metadata .",
    "fmt:ci": "prettier --check --cache --cache-location=./.cache/prettier.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build"
  },
  "dependencies": {
    "blurhash": "^2.0.5"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@sveltejs/kit": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-oxlint": "^0.17.0",
    "eslint-plugin-svelte": "^3.9.1",
    "globals": "catalog:",
    "oxlint": "^0.17.0",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.20.8",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3"
  },
  "peerDependenciesMeta": {
    "@sveltejs/kit": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "eslint": {
      "optional": true
    }
  },
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./prettier.config": {
      "import": "./prettier.config.ts",
      "types": "./config.d.ts",
      "default": "./prettier.config.ts"
    },
    "./eslint.config": {
      "import": "./eslint.config.ts",
      "types": "./config.d.ts",
      "default": "./eslint.config.ts"
    },
    "./theme.css": "./theme.css"
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "theme.css",
    "prettier.config.ts",
    "eslint.config.ts"
  ],
  "publishConfig": {
    "access": "public"
  }
}
