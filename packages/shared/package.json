{
  "name": "@colibri-hq/shared",
  "version": "0.0.1",
  "private": true,
  "description": "The Colibri SDK",
  "keywords": [
    "colibri",
    "ebook-management",
    "ebooks",
    "epub",
    "opds",
    "server"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist",
    "eslint.config.ts",
    "theme.css",
    "vitest.browser.config.ts",
    "vitest.config.ts"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./eslint.config": {
      "types": "./types/eslint.config.d.ts",
      "import": "./eslint.config.ts",
      "default": "./eslint.config.ts"
    },
    "./vitest.config": {
      "types": "./types/vitest.config.d.ts",
      "import": "./vitest.config.ts",
      "default": "./vitest.config.ts"
    },
    "./vitest.browser.config": {
      "types": "./types/vitest.browser.config.d.ts",
      "import": "./vitest.browser.config.ts",
      "default": "./vitest.browser.config.ts"
    },
    "./theme.css": "./theme.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist; tsc",
    "build:ci": "pnpm run build",
    "check": "tsc --noEmit",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "dev": "tsc --watch",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build",
    "test": "vitest run --coverage --cache",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "blurhash": "^2.0.5",
    "canvas": "^3.2.1",
    "exif-reader": "^2.0.3",
    "fast-xml-parser": "^5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@sveltejs/kit": "catalog:",
    "@types/node": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "catalog:",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.21.4",
    "eslint": "^9.28.0"
  },
  "peerDependenciesMeta": {
    "@sveltejs/kit": {
      "optional": true
    },
    "eslint": {
      "optional": true
    }
  }
}
