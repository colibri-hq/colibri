{
  "name": "@colibri-hq/open-library-client",
  "version": "0.0.1",
  "description": "Client for the Open Library API",
  "keywords": [
    "api-client",
    "colibri",
    "open-library"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "esnext": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist; tsc --project tsconfig.lib.json",
    "build:ci": "pnpm run build",
    "dev": "tsc --watch",
    "check": "tsc --noEmit --project tsconfig.lib.json && tsc --noEmit --project tsconfig.node.json",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "test": "vitest",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run build"
  },
  "dependencies": {
    "@colibri-hq/shared": "workspace:*",
    "vitest": "catalog:"
  },
  "devDependencies": {
    "eslint": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  }
}
