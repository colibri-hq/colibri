  "scripts": {
    "dev": "ORIGIN=http://localhost:5173 vite dev",
    "start": "node ./dist/index.js",
    "build": "svelte-kit sync && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "prettier --write --cache --cache-location=./.cache/prettier.json --cache-strategy metadata .",
    "fmt:ci": "prettier --check --cache --cache-location=./.cache/prettier.json --cache-strategy content .",
    "test-ct": "playwright test -c playwright-ct.config.ts",
    "test": "playwright test -c playwright.config.ts"
