{
  "name": "@colibri-hq/cli",
  "version": "0.0.1",
  "description": "The command-line interface for Colibri, an ebook management app",
  "keywords": [
    "colibri",
    "ebook-management",
    "ebooks",
    "epub",
    "oclif",
    "opds",
    "server"
  ],
  "homepage": "https://github.com/colibri-hq/colibri",
  "bugs": {
    "url": "https://github.com/colibri-hq/colibri/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Mazetti",
    "email": "m@9dev.de",
    "url": "https://mazetti.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colibri-hq/colibri.git"
  },
  "bin": {
    "colibri": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc && oclif manifest",
    "build:ci": "pnpm run build",
    "dev": "tsc --watch",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "version": "oclif readme && git add README.md",
    "check": "tsc --noEmit",
    "lint": "oxlint --fix && eslint --fix --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy metadata .",
    "lint:ci": "oxlint --format github && eslint --stats --report-unused-disable-directives --report-unused-inline-configs=error --cache --cache-location=./.cache/eslint.json --cache-strategy content .",
    "fmt": "oxfmt --write .",
    "fmt:ci": "oxfmt --check .",
    "prepack": "pnpm run fmt && pnpm run check && pnpm run lint && pnpm run package",
    "package": "pnpm run build && oclif readme --tsconfig-path=tsconfig.base.json"
  },
  "dependencies": {
    "@colibri-hq/oauth": "workspace:*",
    "@colibri-hq/sdk": "workspace:*",
    "@colibri-hq/shared": "workspace:*",
    "@inquirer/prompts": "^8.2.0",
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-help": "^6.2.36",
    "@oclif/plugin-not-found": "^3.2.73",
    "@oclif/plugin-plugins": "^5.4.54",
    "ansis": "^4.2.0",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "sharp": "^0.34.5",
    "wrap-ansi": "^9.0.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@oclif/test": "^4.1.15",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "catalog:",
    "msw": "^2.12.7",
    "oclif": "^4.22.65",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "oclif": {
    "bin": "colibri",
    "commands": "./dist/commands",
    "dirname": "colibri",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-not-found"
    ],
    "topicSeparator": " ",
    "topics": {
      "creators": {
        "description": "Manage creators and their works."
      },
      "oauth": {
        "description": "Manage OAuth integrations."
      },
      "publishers": {
        "description": "Manage publishers and their works."
      },
      "settings": {
        "description": "Manage instance settings."
      },
      "storage": {
        "description": "Manage persistent storage."
      },
      "users": {
        "description": "Manage Colibri user accounts."
      },
      "works": {
        "description": "Manage works and editions."
      }
    }
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
